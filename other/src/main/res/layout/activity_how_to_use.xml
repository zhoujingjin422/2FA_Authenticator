<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.92"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/ToolbarStyleBlack">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="How to use"
                            android:textColor="@color/text_black"
                            android:textSize="20sp"
                            android:visibility="visible" />
                    </androidx.appcompat.widget.Toolbar>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.08"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.3"
                            android:gravity="center">

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/viewPager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/overpass_bold"
                                android:gravity="center"
                                android:text="Authenticator"
                                android:textColor="@color/text_black"
                                android:textSize="20sp"
                                android:visibility="visible" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/overpass_regular"
                                android:gravity="center"
                                android:text="OTP Authentication"
                                android:textColor="@color/text_grey"
                                android:textSize="16sp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/i1"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/dot_fill"
                                app:tint="#2d9cf1" />

                            <ImageView
                                android:id="@+id/i2"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/dot_out"
                                app:tint="#2d9cf1" />

                            <ImageView
                                android:id="@+id/i3"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/dot_out"
                                app:tint="#2d9cf1" />

                            <ImageView
                                android:id="@+id/i4"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/dot_out"
                                app:tint="#2d9cf1" />

                            <ImageView
                                android:id="@+id/i5"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/dot_out"
                                app:tint="#2d9cf1" />

                            <ImageView
                                android:id="@+id/i6"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/dot_out"
                                app:tint="#2d9cf1" />

                            <ImageView
                                android:id="@+id/i7"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/dot_out"
                                app:tint="#2d9cf1" />

                            <ImageView
                                android:id="@+id/i8"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/dot_out"
                                app:tint="#2d9cf1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:gravity="right|center_vertical|center_horizontal|center">

                            <TextView
                                android:id="@+id/tv_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/overpass_bold"
                                android:gravity="center"
                                android:text="NEXT"
                                android:textColor="#2d9cf1"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_finish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:fontFamily="@font/overpass_bold"
                                android:gravity="center"
                                android:text="FINISH"
                                android:textColor="#2d9cf1"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bannerAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
